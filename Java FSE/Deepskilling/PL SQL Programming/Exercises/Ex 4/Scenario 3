CREATE OR REPLACE FUNCTION HasSufficientBalance (
    p_AccountID IN NUMBER,
    p_Amount    IN NUMBER
) RETURN NUMBER IS
    v_Balance NUMBER;
BEGIN
    SELECT Balance INTO v_Balance
    FROM Accounts
    WHERE AccountID = p_AccountID;

    IF v_Balance >= p_Amount THEN
        RETURN 1;
    ELSE
        RETURN 0;
    END IF;

EXCEPTION
    WHEN NO_DATA_FOUND THEN
        RETURN 0; 
END;
/
-- Case 1: Sufficient balance
SELECT HasSufficientBalance(401, 5000) AS Result FROM DUAL;

-- Case 2: Insufficient balance
SELECT HasSufficientBalance(402, 3000) AS Result FROM DUAL;

-- Case 3: Invalid account
SELECT HasSufficientBalance(999, 1000) AS Result FROM DUAL;
